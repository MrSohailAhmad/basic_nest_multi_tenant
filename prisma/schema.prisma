generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tenantDb {
  id         String   @id @default(uuid())
  name       String
  dbName     String
  dbHost     String
  dbUser     String
  dbPassword String
  createdAt  DateTime @default(now())
}

model tenant {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  // tenantId String @unique
  password String
  roleId   Int
}

model user {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  tenantId String @unique
  password String
  roleId   Int
}

model roles {
  id          Int    @id @default(autoincrement())
  name        String
  description String
}
