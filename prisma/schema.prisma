generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model TenantDb {
  id         String   @id @default(uuid())
  name       String
  dbName     String
  dbHost     String
  dbUser     String
  dbPassword String
  createdAt  DateTime @default(now())
  deleted    Boolean? @default(false)
}

model Tenant {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  // tenantId String @unique
  password String
  roleId   Int
  deleted  Boolean? @default(false)
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  tenantId String   @unique
  password String
  roleId   Int
  deleted  Boolean? @default(false)
}

model Roles {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  deleted     Boolean? @default(false)
}
